def configure( cfg ):
	pass
	
def build( bld ):
	bld.program(
		source = "coverotron.cpp",
		target = 'coverotron',
		use = 'seqan bamtools seqlib package_revision appcontext genfile statfile pthread zlib',
		includes = "./"
	)
	bld.program(
		source = "nonahore.cpp",
		target = 'nonahore',
		use = 'package_revision appcontext genfile statfile iorek zlib',
		includes = "./"
	)
	bld.program(
		source = "tabulate-alignments.cpp",
		target = 'tabulate-alignments',
		use = 'seqan bamtools seqlib package_revision appcontext genfile qcdb pthread zlib',
		includes = "./"
	)
	bld.program(
		source = "tabulate-alignment-ops.cpp",
		target = 'tabulate-alignment-ops',
		use = 'seqan bamtools seqlib package_revision appcontext genfile qcdb pthread zlib',
		includes = "./"
	)
	bld.program(
		source = "assess-qualities.cpp",
		target = 'assess-qualities',
		use = 'seqan bamtools seqlib package_revision appcontext genfile qcdb pthread zlib',
		includes = "./"
	)
	bld.program(
		source = "extract-alignment-info.cpp",
		target = 'extract-alignment-info',
		use = 'seqan bamtools seqlib package_revision appcontext genfile qcdb pthread zlib',
		includes = "./"
	)
	bld.program(
		source = "zoomsa.cpp",
		target = 'zoomsa',
		use = 'seqlib package_revision appcontext genfile qcdb pthread zlib build/package_revision_autogenerated.hpp',
		includes = "./"
	)
	bld.program(
		source = "iorek-qc.cpp",
		target = 'iorek-qc',
		use = 'seqan bamtools seqlib package_revision appcontext genfile qcdb iorek pthread parallel_hashmap concurrentqueue wfa2cpp wfa2 ssw zlib',
		includes = "./"
	)
	bld.program(
		source = "trim-and-filter.cpp",
		target = 'trim-and-filter',
		use = 'package_revision appcontext genfile statfile concurrentqueue pthread zlib build/package_revision_autogenerated.hpp',
		includes = "./"
	)
	bld.program(
		source = "find-motifs.cpp",
		target = 'find-motifs',
		use = 'package_revision appcontext genfile qcdb pthread',
		includes = "./"
	)
	bld.program(
		source = "find-homopolymers.cpp",
		target = 'find-homopolymers',
		use = 'package_revision appcontext genfile qcdb pthread',
		includes = "./"
	)
	bld.program(
		source = "find-vj-reads.cpp",
		target = 'find-vj-reads',
		use = 'seqlib package_revision appcontext genfile qcdb pthread',
		includes = "./"
	)
	bld.program(
		source = "order-orient.cpp",
		target = 'order-orient',
		use = 'seqlib package_revision appcontext genfile qcdb pthread',
		includes = "./"
	)
	bld.program(
		source = "count-trailing-kmers.cpp",
		target = 'count-trailing-kmers',
		use = 'seqan bamtools seqlib package_revision appcontext genfile qcdb iorek pthread parallel_hashmap concurrentqueue wfa2cpp wfa2 ssw zlib',
		includes = "./"
	)
